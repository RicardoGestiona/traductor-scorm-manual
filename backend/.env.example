# Backend Configuration
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AI Translation - Provider Selection
# Options: google (free online), argos (free offline), claude (paid)
TRANSLATION_PROVIDER=google

# API Keys (only needed for paid providers)
ANTHROPIC_API_KEY=  # Required only if TRANSLATION_PROVIDER=claude
OPENAI_API_KEY=     # Optional fallback

# Argos Translate settings
ARGOS_AUTO_DOWNLOAD=true  # Auto-download missing language models

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/traductor_scorm

# Redis (Celery)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE_MB=500
TEMP_STORAGE_TTL_DAYS=7

# Translation
DEFAULT_SOURCE_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,fr,de,it,pt,nl,pl,zh,ja
TRANSLATION_BATCH_SIZE=50
